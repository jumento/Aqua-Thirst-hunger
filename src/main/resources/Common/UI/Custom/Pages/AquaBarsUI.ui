$C = "../Common.ui";

@PrimaryButtonStyle = TextButtonStyle(
  Default: (Background: #4CAF50, LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #66BB6A, LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #388E3C, LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@CancelButtonStyle = TextButtonStyle(
  Default: (Background: #F44336, LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #EF5350, LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #C62828, LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

Group {
  LayoutMode: Top;
  Background: (Color: #141c26(0.98));
  Anchor: (Width: 550, Height: 650);
  Label {
    Anchor: (Height: 45);
    Text: "HUD POSITION EDITOR";
    Style: (FontSize: 24,
      TextColor: #00BFFF,
      HorizontalAlignment: Center,
      RenderBold: true);
  }
  Group #Group64e9c894 {
    LayoutMode: Top;
    $C.@Container #HHunger {
      ScrollbarStyle: $C.@DefaultScrollbarStyle;
      LayoutMode: Middle;
      Background: (Color: #333333);

      #Title {
        LayoutMode: Top;
        $C.@Title #TitleA {
          @Text = "HUNGER";
          Style: (TextColor: #ffffff);
        }
      }

      #Content {
        LayoutMode: Top;
        Anchor: (Full: 1, Horizontal: 1, Vertical: 1);
        Group #Groupb6a9b885 {
          LayoutMode: Top;
          Anchor: (Full: 1, Horizontal: 1);
          Label #TextHunger {
            Text: "Current: Loading...";
            Style: (TextColor: #ffffff);
          }
        }
        Group #Group6404b45d {
          LayoutMode: CenterMiddle;
          Group #GroupAcopy {
            LayoutMode: Middle;
            Anchor: (Width: 200);
            $C.@TextButton #HungerAboveHotbarCentered {
              Text: "Above Centered";
            }
            $C.@TextButton #HungerAboveHotbarLeft {
              Text: "Above Left";
            }
            $C.@TextButton #HungerBelowHotbarLeft {
              Text: "Below Left";
            }
            $C.@TextButton #HungerBottomLeft {
              Text: "Bottom Left";
            }
          }
          Group #GroupA {
            LayoutMode: Middle;
            Anchor: (Width: 200);
            $C.@TextButton #HungerBelowHotbarCentered {
              Text: "Below Centered";
            }
            $C.@TextButton #HungerAboveHotbarRight {
              Text: "Above Right";
            }
            $C.@TextButton #HungerBelowHotbarRight {
              Text: "Below Right";
            }
            $C.@TextButton #HungerBottomRight {
              Text: "Bottom Right";
            }
          }
        }
      }
    }
    $C.@Container #Thirst {
      ScrollbarStyle: $C.@DefaultScrollbarStyle;
      LayoutMode: Middle;
      Background: (Color: #333333);

      #Title {
        LayoutMode: Top;
        $C.@Title #TitleAcopy {
          @Text = "THIRST";
          Style: (TextColor: #ffffff);
        }
      }

      #Content {
        LayoutMode: Top;
        Anchor: (Full: 1, Horizontal: 1, Vertical: 1);
        Group #Groupb6a9b885copy {
          LayoutMode: Top;
          Anchor: (Full: 1, Horizontal: 1);
          Label #TextThirst {
            Text: "Current: Loading...";
            Style: (TextColor: #ffffff);
          }
        }
        Group #Group6404b45dcopy {
          LayoutMode: CenterMiddle;
          Group #GroupAcopycopy {
            LayoutMode: Middle;
            Anchor: (Width: 200);
            $C.@TextButton #ThirstAboveHotbarCentered {
              Text: "Above Centered";
            }
            $C.@TextButton #ThirstAboveHotbarLeft {
              Text: "Above Left";
            }
            $C.@TextButton #ThirstBelowHotbarLeft {
              Text: "Below Left";
            }
            $C.@TextButton #ThirstBottomLeft {
              Text: "Bottom Left";
            }
          }
          Group #GroupAcopy {
            LayoutMode: Middle;
            Anchor: (Width: 200);
            $C.@TextButton #ThirstBelowHotbarCentered {
              Text: "Below Centered";
            }
            $C.@TextButton #ThirstAboveHotbarRight {
              Text: "Above Right";
            }
            $C.@TextButton #ThirstBelowHotbarRight {
              Text: "Below Right";
            }
            $C.@TextButton #ThirstBottomRight {
              Text: "Bottom Right";
            }
          }
        }
      }
    }
    Group {
      FlexWeight: 1;
    }
    
    // Updated Footer: ONLY Cancel Button, no Save Button.
    Group {
      LayoutMode: CenterMiddle;
      Anchor: (Height: 44);
      TextButton #CancelButton {
        Anchor: (Width: 110, Height: 40);
        Text: "CLOSE";
        Style: @CancelButtonStyle;
      }
    }
  }
}
